<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewChatRoom"
    android:orientation="vertical"
    android:weightSum="10"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@drawable/gradient_yellow2green_transparent"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/your_state_wrapper"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/your_image_wrapper"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:cardCornerRadius="17dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/your_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/your_state"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/your_image_wrapper"
                android:src="@drawable/ic_baseline_mic_24"
                app:tint="#94000000"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/xmlLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/item_bg_outline"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/viewTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/item_bg_on"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="텍스트 모드"
                android:fontFamily="@font/nanumsquareroundr"
                android:textColor="@color/black"
                android:textSize="14dp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/subScriberTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="20dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="보이스모드"
                android:textSize="14dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/exitBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:backgroundTint="#FF6054"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_exit_to_app_24"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:id="@+id/chat_recyclerView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal"
        >
<!--        <ImageView-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_weight="1"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_gravity="center"-->
<!--            android:id="@+id/your_image"-->
<!--            />-->
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:autoSizeTextType="uniform"
            android:padding="3dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:id="@+id/your_text"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:padding="3dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:id="@+id/my_text"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/my_image"
            />
    </LinearLayout>
    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:value="20"
        android:valueFrom="10"
        android:valueTo="80"
        android:stepSize="10"
        app:labelBehavior="gone"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:id="@+id/send_edit_text"
            android:hint="메세지를 입력하세요"
            />

        <Button
            android:id="@+id/stt_button"
            android:onClick="startRecognition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STT" />


        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/save_check"
            />
    </LinearLayout>




</LinearLayout>